# GetSpot Data Integrity Test Configuration
# Copy this file to .env and fill in your values

# Firebase Service Account
# Path to your service account key JSON file
# Download from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT_PATH=serviceAccountKey.json

# Firebase Project Configuration
FIREBASE_PROJECT_ID=getspot01
FIREBASE_STORAGE_BUCKET=getspot01.firebasestorage.app

# Test Execution Options
# Set to 'true' to run slow tests (comprehensive checks)
RUN_SLOW_TESTS=false

# Maximum number of failures to display per test
# Increase to see more failures, decrease for faster execution
MAX_FAILURES_PER_TEST=10

# Optional: Enable verbose logging
# DEBUG=true
